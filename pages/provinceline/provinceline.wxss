/* pages/provinceline/provinceline.wxss */
.picker{
  font-size: 20rpx;
}
.class-radiogroup{
  width: 100%;
  display: flex;
  flex-direction: row;
}

.line-table{
  width: 96%;
  margin-left: 2%;
}

.table {
display: table;
width: 100%;
border-collapse: collapse; 
box-sizing: border-box;
}

.table-tr {
display: table-row;
height: 92rpx;
}

.table-th {
display: table-cell; 
font-weight: bold;
border: 1rpx solid gray;
text-align: center;
vertical-align: middle;
}

.table-td {
display: table-cell;
border: 1rpx solid gray;
text-align: center;
vertical-align: middle;
}