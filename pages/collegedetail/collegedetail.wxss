/* pages/collegedetail/collegedetail.wxss */

.colleges-item {
  display: flex;
  flex-direction: row;
  padding: 60rpx;
  border-bottom: 5px solid #e0e0e0;
}

.college-location {
}

.college-intro {
  width: 90%;
  margin-left: 5%;
  margin-top: 20rpx;
  font-size: 30rpx;
  text-align: justify;

}

.colleges-logo {
  width: 50%;
  display: flex;
  justify-content: center;
}

.colleges-logo image {
  height: 200rpx;
  width: 200rpx;
  /* margin: 0px 50rpx; */
  border-radius: 50%;
}

.colleges-desces {
  width: 80%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.colleges-tag {
  margin-left: 5rpx;
}

.gradeLine-pickers {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  margin-top: 20rpx;
}

.gradeLine-select {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.triangle {
  width: 0;
  height: 0;
  border-left: 10rpx solid transparent;
  border-right: 10rpx solid transparent;
  border-top: 20rpx solid #e0e0e0;
}

.triangle1 {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.college-table{
  width: 94%;
  margin-top: 20rpx;
  margin-left: 3%;
}

.table, .table div {
margin: 0 auto;
}

.table {
display: table;
width: 100%;
border-collapse: collapse; 
box-sizing: border-box;
}

.table-tr {
display: table-row;
height: 92rpx;
}

.table-th {
display: table-cell; 
font-weight: bold;
border: 1rpx solid gray;
text-align: center;
vertical-align: middle;
}

.table-td {
display: table-cell;
border: 1rpx solid gray;
text-align: center;
vertical-align: middle;
}