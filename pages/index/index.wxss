.swiper {
  width: 100%;
  height: 500rpx;
}

.swiper image {
  width: 100%;
  height: 500rpx;
}

.sear {
  position: absolute;
  top: 20rpx;
  width: 96%;
  margin-left: 2%;
  height: 50rpx;
  border-radius: 30%;
  opacity: 0.8;
}

#searchBar {
  height: 100%;
}

.grid-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  font-size: 25rpx;
  text-align: center;
}

.grid-item image {
  width: 100rpx;
  height: 120rpx;
}

.detail {
  margin-top: 40rpx;
  margin-bottom: 40rpx;
}

.color {
  padding: 0 !important;
  border: none !important;
}

.color-item {
  width: 100%;
  color: #fff;
  box-shadow: inset 0 0 0 1px rgba(0, 0, 0, 0.05);
  border-radius: 5px;
  padding: 30rpx;
}

.color-item-content {
  padding: 6px;
  font-size: 12px;
  opacity: 0.7;
}

.color-item.primary {
  background: #2d8cf0;
}

.color-item.light-primary {
  background: #5cadff;
}
